<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ChooseDough"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="240dp"
        android:text="@string/ChooseDough"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/StandardDough"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="36dp"
        android:text="@string/StandardDough"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseDough" />

    <CheckBox
        android:id="@+id/BoardHotDog"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="18dp"
        android:text="@string/BoardHotDog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseDough" />

    <CheckBox
        android:id="@+id/PhiladelphiaDough"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="96dp"
        android:text="@string/PhiladelphiaDough"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseDough" />

    <CheckBox
        android:id="@+id/ThinDough"
        android:layout_width="159dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="18dp"
        android:text="@string/ThinDough"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseDough" />
</androidx.constraintlayout.widget.ConstraintLayout>